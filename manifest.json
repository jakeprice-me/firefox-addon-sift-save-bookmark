{
  "manifest_version": 2,
  "name": "SIFT Bookmark",
  "version": "1.1.3",
  "description": "Save the title and URL of the current page to SIFT as a bookmark entry",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "https://*/*", "storage"],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  }
}

